<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/symptomName"
        android:layout_width="124dp"
        android:layout_height="72dp"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/divider3"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <RadioGroup
        android:id="@+id/groupBtn"
        android:layout_width="262dp"
        android:layout_height="71dp"
        android:layout_marginStart="12dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/divider3"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/noSymptoms"
            android:layout_width="65dp"
            android:layout_height="61dp"
            android:buttonTint="#009688"
            android:checked="true"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/lowSymptoms"
            android:layout_width="65dp"
            android:layout_height="71dp"
            android:buttonTint="#DCC81D" />

        <RadioButton
            android:id="@+id/mediumSymptoms"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:buttonTint="#DC8E1A" />

        <RadioButton
            android:id="@+id/highSymptoms"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:buttonTint="#BD271C" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>